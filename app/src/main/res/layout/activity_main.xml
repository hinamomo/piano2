<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.piano2.MainActivity">

    <Button
        android:id="@+id/doButton"
        android:layout_width="370dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_sample_do"
        android:elevation="0dp"
        android:text="ド"
        app:layout_constraintBottom_toTopOf="@+id/reButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reButton"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_sample_re"
        android:text="レ"
        app:layout_constraintBottom_toTopOf="@+id/miButton"
        app:layout_constraintTop_toBottomOf="@+id/doButton" />

    <Button
        android:id="@+id/miButton"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_sample_mi"
        android:text="ミ"
        app:layout_constraintBottom_toTopOf="@+id/faButton"
        app:layout_constraintTop_toBottomOf="@+id/reButton" />

    <Button
        android:id="@+id/faButton"
        android:layout_width="270dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_sample_fa"
        android:text="ファ"
        app:layout_constraintBottom_toTopOf="@+id/soButton"
        app:layout_constraintTop_toBottomOf="@+id/miButton" />

    <Button
        android:id="@+id/soButton"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_sample_so"
        android:text="ソ"
        app:layout_constraintBottom_toTopOf="@+id/raButton"
        app:layout_constraintTop_toBottomOf="@+id/faButton" />

    <Button
        android:id="@+id/raButton"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_sample_ra"
        android:text="ラ"
        app:layout_constraintBottom_toTopOf="@+id/siButton"
        app:layout_constraintTop_toBottomOf="@+id/soButton" />

    <Button
        android:id="@+id/siButton"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_sample_si"
        android:text="シ"
        app:layout_constraintBottom_toTopOf="@+id/dohButton"
        app:layout_constraintTop_toBottomOf="@+id/raButton" />

    <Button
        android:id="@+id/dohButton"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_sample_doh"
        android:text="ド"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siButton" />

</android.support.constraint.ConstraintLayout>
